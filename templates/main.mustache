<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="css/bootstrap.min.css">

    <title>Squeak</title>
</head>

<body>

    <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom box-shadow">
        <h5 class="my-0 mr-md-auto font-weight-normal">Squeak</h5>
        <form id="signout-form" action="/signout" method="post">
            <input type="hidden" name="_csrf" value="{{csrfToken}}">
            <button type="submit" class="btn btn-outline-primary">Sign Out</button>
        </form>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title">Welcome, {{username}}!</h3>
                        <form action="/squeak" method="post">
                            <input type="hidden" name="_csrf" value="{{csrfToken}}">

                            <div class="form-group">
                                <label for="recipient">Recipient:</label>
                                <select class="form-control" name="recipient" id="recipient">
                                    <option value="all">Everyone (Public Squeak)</option>
                                    {{#users}}
                                    <option value="{{.}}">{{.}} (Private Squeal)</option>
                                    {{/users}}
                                </select>
                            </div>

                            <div class="form-group">
                                <textarea class="form-control" name="text" rows="3" placeholder="What's squeaking?"></textarea>
                            </div>

                            <button type="submit" class="btn btn-primary">Post</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Public Squeaks Section -->
        <div class="row mt-5">
            <div class="col-md-8 offset-md-2">
                <h4 class="mb-3">
                    <span class="badge badge-primary">Public Squeaks</span>
                </h4>
                {{#squeaks}}
                <div class="card mt-3 border-primary">
                    <div class="card-body">
                        <h5 class="card-title">{{name}}</h5>
                        <p class="card-text">{{squeak}}</p>
                        <p class="card-text"><small class="text-muted">{{time}}</small></p>
                    </div>
                </div>
                {{/squeaks}}
                {{^squeaks}}
                <div class="alert alert-info">No public squeaks yet. Be the first to squeak!</div>
                {{/squeaks}}
            </div>
        </div>

        <!-- Private Squeals Section -->
        <div class="row mt-5">
            <div class="col-md-8 offset-md-2">
                <h4 class="mb-3">
                    <span class="badge badge-success">Your Private Squeals</span>
                </h4>
                {{#squeals}}
                <div class="card mt-3 border-success">
                    <div class="card-body">
                        <h5 class="card-title">{{name}}</h5>
                        <p class="card-text">{{squeak}}</p>
                        <p class="card-text"><small class="text-muted">{{time}}</small></p>
                    </div>
                </div>
                {{/squeals}}
                {{^squeals}}
                <div class="alert alert-info">No private squeals for you yet.</div>
                {{/squeals}}
            </div>
        </div>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="js/jquery-3.7.1.min.js"></script>
    <script src="js/popper.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/index.js"></script>
</body>

</html>